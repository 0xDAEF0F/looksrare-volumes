generator client {
  provider = "prisma-client-js"
}

generator nexusPrisma {
  provider = "nexus-prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

/// This represents an exchange
model Exchange {
  id           String        @id @default(cuid())
  name         String        @unique
  ticker       String        @unique
  tokenAddress String        @unique
  tokenSupply  Float
  tokenCap     Int
  dailyLogs    ExchangeLog[]
}

/// Each exchange emits daily logs indexed here.
model ExchangeLog {
  id                          String   @id @default(cuid())
  exchangeId                  String
  date                        String
  dailyVolume                 String
  /// Excluding wash-trading.
  dailyVolumeExcludingZeroFee Float?
  dailyUsers                  String
  dailyTransactions           String
  /// Multiple APIs will be called for this data.
  price                       Int?
  exchange                    Exchange @relation(fields: [exchangeId], references: [id])
}
